<div class="edit-classification-wrapper">
  <div class="edit-classification-container">        
    <h1>Delete Vehicle</h1>

    <%- messages() %>

    <% if (errors && errors.length > 0) { %>
        <div class="flash-message">
            <% errors.forEach(error => { %>
            <p><%= error.msg %></p>
            <% }) %>
        </div>
    <% } %>

    <form action="/inv/delete" method="post" id="updateForm">
        <input type="hidden" name="inv_id" value="<%= typeof inv_id != 'undefined' ? inv_id : '' %>">

        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required
            value="<%= typeof inv_make != 'undefined' ? inv_make : '' %>" readonly>

        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required
            value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>" readonly>

        <label for="inv_year">Year</label>
        <input type="text" id="inv_year" name="inv_year" required pattern="\d{4}" maxlength="4"
            value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>" readonly>

        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" required min="0"
            value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>" readonly>


        <button type="submit">Delete Vehicle</button>
    </form>
    <p>Confirm Deletion - The delete is permanent.</p>
  </div>
</div>
